source 'https://rubygems.org'
ruby '2.3.0'

gem 'rails'

gem 'rails-api'

gem 'httparty'

gem 'figaro'

# Redis
gem 'redis'
gem 'redis-namespace'
gem 'redis-rails'
gem 'redis-rack-cache'

# Use respond_to
gem 'responders', '~> 2.0'

gem 'spring', group: :development

group :development, :test do
  # Debugging gems
  gem 'pry-byebug'
end

group :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'shoulda-matchers'
  gem 'timecop'
  gem 'faker'
  gem 'database_cleaner'
  gem 'simplecov', require: false
  gem 'webmock'
end
